@model JobMatch.Models.ViewModels.AdminDashboardVM

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4">Admin Dashboard</h2>

    @if (TempData["Msg"] is string msg)
    {
        <div class="alert alert-info">@msg</div>
    }

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Total Users</div>
                    <div class="fs-4 fw-semibold">@Model.TotalUsers</div>
                    <div class="text-muted small">
                        Jobseekers: @Model.TotalJobseekers<br />
                        Recruiters: @Model.TotalRecruiters<br />
                        Admins: @Model.TotalAdmins
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Jobs</div>
                    <div class="fs-4 fw-semibold">@Model.TotalJobs</div>
                    <div class="text-muted small">
                        Active: @Model.ActiveJobs
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="text-muted small">Applications</div>
                    <div class="fs-4 fw-semibold">@Model.TotalApplications</div>
                    <div class="text-muted small">
                        Recent activity below
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm">
                <div class="card-body d-flex flex-column justify-content-between h-100">
                    <div>
                        <div class="text-muted small">Admin Tools</div>
                        <ul class="list-unstyled mb-0 small">
                            <li><a asp-action="Users" class="link-primary">Manage Users &amp; Roles</a></li>
                            <li><a asp-action="Announcements" class="link-primary">Announcements</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">Latest Jobs</h5>

                    @if (!Model.LatestJobs.Any())
                    {
                        <p class="text-muted small mb-0">No jobs yet.</p>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var j in Model.LatestJobs)
                            {
                                <a asp-controller="Jobs"
                                   asp-action="Details"
                                   asp-route-id="@j.Id"
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <div class="fw-semibold">@j.Title</div>
                                            <div class="text-muted small">@j.Organization Â· @j.Location</div>
                                        </div>
                                        <div class="text-muted small">
                                            @j.CreatedAt.ToLocalTime().ToString("dd MMM yyyy")
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">Latest Applications</h5>

                    @if (!Model.LatestApplications.Any())
                    {
                        <p class="text-muted small mb-0">No applications yet.</p>
                    }
                    else
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var a in Model.LatestApplications)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <div class="fw-semibold">
                                                @a.Job.Title
                                            </div>
                                            <div class="text-muted small">
                                                Applicant: @a.ApplicantUserId<br />
                                                Status: @a.Status
                                            </div>
                                        </div>
                                        <div class="text-muted small">
                                            @a.SubmittedAt.ToLocalTime().ToString("dd MMM yyyy")
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
