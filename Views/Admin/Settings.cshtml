@model JobMatch.Models.ViewModels.DataPolicySettings
@* Mostly used to display the admin settings page. *@
@{
    ViewData["Title"] = "Data & Privacy Settings";
}
<h2>Data & Privacy Settings</h2>
@if (TempData["Saved"] != null) { <div class="alert alert-success">@TempData["Saved"]</div> }
<form asp-action="Settings" method="post" class="mt-3">
    <div class="mb-3">
        <label class="form-label">Retention (days)</label>
        <input asp-for="RetentionDays" class="form-control" type="number" min="1" />
    </div>
    <div class="form-check mb-2">
        <input asp-for="AllowExportRequests" class="form-check-input" />
        <label class="form-check-label" asp-for="AllowExportRequests">Allow export requests</label>
    </div>
    <div class="form-check mb-3">
        <input asp-for="AllowDeletionRequests" class="form-check-input" />
        <label class="form-check-label" asp-for="AllowDeletionRequests">Allow deletion requests</label>
    </div>
    <div class="mb-3">
        <label class="form-label">Privacy notice text</label>
        <textarea asp-for="PrivacyNoticeText" class="form-control" rows="4"></textarea>
    </div>
    <div class="text-muted mb-3">Last updated: @Model.UpdatedAt.ToLocalTime()</div>
    <button type="submit" class="btn btn-primary">Save Settings</button>
</form>
