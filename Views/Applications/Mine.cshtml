@model IEnumerable<JobMatch.Models.JobApplication>
@* We use this view to handle job applications created by the current user. *@
<div class="container my-4">
  
<h2>My Applications</h2>
  @if (!Model.Any())
  {
    <div class="card-job p-4 text-center">
      <div class="mb-2"><i class="bi bi-envelope-open" style="font-size:2rem;"></i></div>
      <h5 class="mb-1">No applications yet</h5>
      <p class="meta">Find a job you like and apply.</p>
      <a class="btn btn-brand" asp-controller="Jobs" asp-action="Index">Find Jobs</a>
    </div>
  }
  else
  {
    <div class="vstack gap-3">
      @foreach (var a in Model)
      {
        <div class="card-job p-3 d-flex justify-content-between align-items-center">
          <div>
            <div class="job-title mb-1">@a.Job!.Title</div>
            <div class="meta">@a.Job.Organization · @a.SubmittedAt.ToLocalTime().ToString("dd MMM yyyy HH:mm") · Status: @a.Status</div>
          </div>
          <a class="btn btn-outline-primary" asp-controller="Jobs" asp-action="Details" asp-route-id="@a.JobId">View</a>
        </div>
      }
    </div>
  }
</div>
