@model IEnumerable<JobMatch.Models.ViewModels.JobMatchResultVM>

@{
    ViewData["Title"] = "Matches";
    string q = (string)(ViewBag.Query ?? "");
    var isJobseeker = User?.Identity?.IsAuthenticated == true && User.IsInRole("Jobseeker");
    bool resumeUsed = ViewBag.ResumeUsed == true;
    int skillCount = ViewBag.SkillCount ?? 0;
    string debugMsg = (string)(ViewBag.DebugMsg ?? "");
}

<div class="container mt-4">
    <h2>Matches</h2>

    @if (!string.IsNullOrWhiteSpace(debugMsg))
    {
        <div class="alert alert-info small">@debugMsg</div>
    }

    @if (resumeUsed)
    {
        <p class="text-muted small">
            Matching jobs using your latest CV (@skillCount skill@(skillCount == 1 ? "" : "s") found).
        </p>
    }
    else
    {
        <p class="text-muted small">
            No usable parsed CV found – showing recent jobs instead.
        </p>
    }

    <form method="get" class="row g-2 mb-3">
        <div class="col-md-6">
            <input class="form-control" type="text" name="q" value="@q" placeholder="Search by keyword or tag..." />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-secondary">No matches yet — try a broader term.</div>
    }
    else
    {
        <div class="list-group">
            @foreach (var m in Model)
            {
                var j = m.Job;
                <div class="list-group-item">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="me-2 flex-grow-1">
                            <a class="text-decoration-none" asp-controller="Jobs" asp-action="Details" asp-route-id="@j.Id">
                                <div class="fw-semibold">@j.Title</div>
                                <div class="small text-muted">@j.Organization • @j.Location</div>
                            </a>

                            @if (!string.IsNullOrWhiteSpace(j.TagsCsv))
                            {
                                <div class="mt-1 small text-muted">Tags: @j.TagsCsv</div>
                            }

                            @if (resumeUsed && m.MatchPercent > 0 && m.MatchedSkills.Any())
                            {
                                <div class="mt-2">
                                    <span class="badge bg-success me-1">
                                        Match @m.MatchPercent%
                                    </span>
                                    <div class="small text-muted mt-1">
                                        This job matches your CV because you have:
                                        @string.Join(", ", m.MatchedSkills.Select(s => s.ToUpperInvariant()))
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="ms-2">
                            @if (isJobseeker)
                            {
                                <a class="btn btn-sm btn-primary"
                                   asp-controller="CoverLetters"
                                   asp-action="Create"
                                   asp-route-jobId="@j.Id">
                                    Cover Letter
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
